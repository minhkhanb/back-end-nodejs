<% paginationHelper = (pagination, currentStatus) => {
    const { totalItems, totalItemPages, totalPages, currentPage, pageRanges } = pagination;

    const from = (pagination.currentPage - 1) * pagination.totalItemPages + 1;
    const to = Math.min(pagination.currentPage * pagination.totalItemPages, pagination.totalItems);

    let link = `${configSystem.prefixAdmin}/items/status/${currentStatus}`;

    const htmlStart = `
        <li class="${currentPage > 1 ? '' : 'disabled'}">
          <a href="${currentPage > 1 ? `/${link}?page=1` : '#'}">Start</a>
        </li>`;
    const htmlPrev = `<li class="${currentPage > 1 ? '' : 'disabled'}">
          <a href="${currentPage > 1 ? `/${link}?page=${currentPage - 1}` : '#'}">Prev</a>
        </li>`;
    const htmlNext = `<li class="${currentPage < totalPages ? '' : 'disabled'}">
      <a href="${currentPage < totalPages ? `/${link}?page=${currentPage + 1}` : '#'}">Next</a>
    </li>`;
    const htmlEnd = `<li class="${currentPage < totalPages ? '' : 'disabled'}">
      <a href="${currentPage < totalPages ? `/${link}?page=${totalPages}` : '#'}">End</a>
    </li>`;

    const htmlPages = Array.from(Array(Math.min(pageRanges, totalItems))).map((_, index) => {

        const pageEnd = Math.min((currentPage - 1) + Math.ceil(pageRanges / 2), totalPages);
        const pageStart = Math.max(pageEnd - pageRanges + 1, 1);

        const pageNumber = index + pageStart;

        return `
        <li class="${currentPage === pageNumber ? 'active text-white' : ''}">
          <a href="/${link}?page=${pageNumber}">${pageNumber}</a>
        </li>
      `;
    }).join('');

    const htmlPagination = `
    <ul class="pagination text-center">${htmlStart}${htmlPrev}${htmlPages}${htmlNext}${htmlEnd}</ul>
    `;

    return `
    <div class="panel panel-info" id="pagination">
            <div class="panel-heading">
                Pagination
                <span>^</span>
                <span class="label label-warning">Total pages: ${totalPages}</span>
                <span class="label label-danger">Total entries: ${totalItems}</span>
            </div>
            <div class="panel-body">
                <div class="infor-pagination">
                    <p>Number of elements on the page: <span>${totalItemPages}</span></p>
                    <p>Showing <span> ${from} </span> to <span>${to}</span> of <span>${totalItems}</span> entries</p>
                </div>
                <div class="ad-pagination">
                  ${htmlPagination}
                </div>
            </div>
        </div>
    `;
}; %>