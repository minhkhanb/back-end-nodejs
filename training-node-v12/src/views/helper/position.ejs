
<% 

positionHelper = (position, id, collection) => {
    let link = systemConfig.prefixAdmin + "/" + collection + "/change-position/"+ id + "/" + (position === 'inactive' ? 'active' : 'inactive')
    let xhtml = '';
        if(position === 'active'){
            xhtml= '<span class="badge text-bg-info rounded-1 text-white fw-normal fs--1 p-2 py-1">TOP POST</span>'
        }else{
            xhtml= '<span class="badge text-bg-warning rounded-1 text-white fw-normal fs--1 px-2 py-1">NORMAL</span>'
        } 
    
     return `<a href="/${link}">${xhtml}</a>`

}
%>