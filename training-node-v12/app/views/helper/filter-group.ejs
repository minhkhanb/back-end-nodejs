<%
filterGroupHelper = (groups, groupId) => {
  return `
     <select name="group" class="form-select filter-group">
      <option value="novalue">Choose Group</option>
      ${groups.map(group => {
        return `
          <option value="${group._id}" ${(groupId && groupId.toString() === group._id.toString()) ? 'selected' : ''}>${group.name}</option>`
        }).join('')}
      </select>
     `
}
%>

